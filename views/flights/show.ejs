<%- include('../partials/header') %>

    <section id="show-page">
        <table>
            <thead>
                <tr>
                    <td>Key</td>
                    <td>Value</td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Airline:</td>
                    <td>
                        <%= flight.airline %>
                    </td>
                </tr>
                <tr>
                    <td>Airport:</td>
                    <td>
                        <%= flight.airport %>
                    </td>
                </tr>
                <tr>
                    <td>Flight Number:</td>
                    <td>
                        <%= flight.flightNo %>
                    </td>
                </tr>
                <tr>
                    <td>Date:</td>
                    <td>
                        <%= flight.departs %>
                    </td>
                </tr>
            </tbody>
        </table>
    </section>

    <br /><br />
    <h2>Destinations</h2>
    <% if (flight.destination.length) { %>
        <table>
            <thead>
                <tr>
                    <th>Destination ID</th>
                    <th>Arrival</th>
                    <th>Airport</th>
                </tr>
            </thead>
            <tbody>
                <% flight.destination.forEach(function(d) { %>
                    <tr>
                        <td>
                            <%= d._id %>
                        </td>
                        <% if (d.arrival) { %>
                            <td>
                                <%= d.arrival.toLocaleString() %>
                            </td>
                            <% } else { %>
                                <td>Arrival not set</td>
                                <% } %>
                                    <td>
                                        <%= d.airport %>
                                    </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
        <% } else { %>
            <h5>No Destinations Yet</h5>
            <% } %>

                <h3>Add Destination Form</h3>
                <form id="add-destination" method="POST" action="/flights/<%= flight._id %>/destination">
                    <label>Add Destination:</label>
                    <select name="airport">
                        <option value="ATL">ATL</option>
                        <option value="DFW">DFW</option>
                        <option value="DEN" selected>DEN</option>
                        <option value="LAX">LAX</option>
                        <option value="SAN">SAN</option>
                    </select>
                    <input type="datetime-local" name="arrival" />
                    <input type="submit" value="Add Destination" />
                </form>

                <h2>Tickets</h2>
                <% if (tickets.length) { %>
                    <table>
                        <thead>
                            <tr>
                                <th>Ticket ID</th>
                                <th>Seat</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% tickets.forEach(function(t) { %>
                                <tr>
                                    <td>
                                        <%= t._id %>
                                    </td>
                                    <td>
                                        <%= t.seat %>
                                    </td>
                                    <td>
                                        <%= t.price %>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                    <% } else { %>
                        <h5>No Destinations Yet</h5>
                        <% } %>

                            <a href="/flights/<%= flight._id %>/tickets/new" id="ticket-btn">Add a new ticket</a>

                            <%- include('../partials/footer') %>